{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "fqdn": {
      "type": "string",
      "metadata": {
        "template": "WebApplication.json"
      }
    },
    "AppServicePlanId": {
      "type": "string",
      "metadata": {
        "template": "WebApplication.json"
      }
    }
  },
  "variables": {
    "resourceGroup": "[resourceGroup()]",
    "AppName": "[replace(parameters('fqdn'),'.','')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "name": "[variables('AppName')]",
      "apiVersion": "2015-08-01",
      "location": "[variables('resourceGroup').location]",
      "tags": {
        "displayName": "Web Application",
        "[concat('hidden-related:', parameters('AppServicePlanId'))]": "empty"
      },
      "properties": {
        "enabledHostNames": [
          "[parameters('fqdn')]",
          "[concat(variables('AppName'),'.azurewebsites.net')]",
          "[concat(variables('AppName'),'.scm.azurewebsites.net')]"
        ],
        "hostNames": [
          "[parameters('fqdn')]",
          "[concat(variables('AppName'),'.azurewebsites.net')]"
        ],
        "hostNameSslStates": [
          {
            "name": "[parameters('fqdn')]",
            "sslState": 0,
            "ipBasedSslState": 0
          },
          {
            "name": "[concat(variables('AppName'),'.azurewebsites.net')]",
            "sslState": 0,
            "ipBasedSslState": 0
          },
          {
            "name": "[concat(variables('AppName'),'.scm.azurewebsites.net')]",
            "sslState": 0,
            "ipBasedSslState": 0
          }
        ],
        "name": "[variables('AppName')]",
        "serverFarmId": "[concat(parameters('AppServicePlanId'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "PHPMYADMIN_EXTENSION_VERSION",
              "value": "latest"
            }
          ],
          "phpVersion": "5.6",
          "localMySqlEnabled": true
        }
      },
      "resources": [
        {
          "type": "sourcecontrols",
          "name": "web",
          "tags": {
            "displayName": "Source Control"
          },
          "apiVersion": "2016-03-01",
          "properties": {
            "RepoUrl": "https://github.com/azureappserviceoss/wordpress-azure",
            "branch": "master",
            "IsManualIntegration": true
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', variables('AppName'))]"
          ]
        }
      ],
      "dependsOn": [
      ]
    }
  ],
  "outputs": {
  }
}